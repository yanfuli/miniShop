/* pages/shoppingCar/shoppingCar.wxss */
.goods-item{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #f1f1f1;
  box-sizing: border-box;
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.goods-img{
  width: 200rpx;
  height: 200rpx;
}
.goods-item-right{
  width: 480rpx;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-item-title{
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.goods-title{
  width: 440rpx;
  max-height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #333333;
}
.goods-del-icon{
  width: 30rpx;
  height: 30rpx;
}
.goods-item-price-bar{
  width: 430rpx;
  height: 50rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.goods-item-price{
  font-size: 28rpx;
  color: #fe4857;
}
.goods-num{
  font-size: 28rpx;
  color: #333333;
}
.goods-num text:nth-child(2){
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.dilan{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-left: 24rpx;
  padding-right: 24rpx;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: white;
}
.dilan-text{
  font-size: 28rpx;
  color: #333333;
}
.dilan-text text{
  color: #fe4857
}
.dilan-btn{
  width: 180rpx;
  height: 100%;
  line-height: 70rpx;
  background: #fe4857;
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
}
.tishi{
  font-size: 28rpx;
  color: #999999;
  width: 700rpx;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
}