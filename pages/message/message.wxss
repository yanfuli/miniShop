.inp-box{
  width: 700rpx;
  margin: 0 auto;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 28rpx;
  border-bottom: 1rpx #eeeeee solid;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.inp-box textarea{
  width: 100%;
  height: 300rpx;
  border: 1rpx #eeeeee solid;
  margin-top: 20rpx;
}
.inp-box:nth-child(3){
  border: none;
}
.sub-btn{
  width: 100% !important;
  height: 70rpx;
  line-break: 70rpx;
  color: #ffffff;
  background: #de6d6d;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 100rpx;
  border-radius: 0;
  position: fixed;
  bottom: 0;
  left: 0;
}