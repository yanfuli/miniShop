.banner{
  width: 100%;
}
.goods-list{
  width: 700rpx;
  height: auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 20rpx auto;
}
.goods-item{
  width: 340rpx;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.goods-pic{
  width: 100%;
  height: 340rpx;
}
.goods-title{
  width: 100%;
  height: 40rpx;
  color: #333333;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.item-bottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
}
.price{
  color: #c00;
  font-size: 24rpx;
}
.price text:nth-child(1){
  font-size: 28rpx;
}
.shopping-car{
  width: 30rpx;
  height: 30rpx;
}
