/* pages/search/search.wxss */
.header{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-bottom: 1px #eeeeee solid;
}
.search-box{
  width: 600rpx;
  height: 70rpx;
  border: 1px #de6d6d solid;
  border-radius: 4px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding-left: 24rpx;
  padding-right: 24rpx;
  margin-bottom: 20rpx;
}
.search-box image{
  width: 29rpx;
  height: 30rpx;
}
.search-box input{
  width: 500rpx;
  font-size: 28rpx;
}
.search-del{
  font-size: 28rpx;
  color: #333333;
}
.paixu{
  width: 700rpx;
  height: auto;
  overflow: hidden;
  display: flex;
  align-items: center;
  margin: 20rpx auto;
}
.paixu-title{
  color: #de6d6d;
}
.paixu-box{
  display: flex;
  justify-content: space-around;
  margin-left: 14rpx;
}
.paixu-item{
  font-size: 24rpx;
  color: #333333;
  margin-right: 20rpx;
}
.up {
    transform: rotate(-135deg);
    -webkit-transform: rotate(-135deg);
    margin-left: 5px;
    margin-bottom: 3px;
}
.down{
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    margin-left: -5px;
    margin-bottom: -1px;
}
.icon{
    border: solid #999;
    border-width: 0 1px 1px 0;
    display: inline-block;
    padding: 2px;
}
.paixu-item .icon-active{
  border: solid #c00;
  border-width: 0 1px 1px 0;
  display: inline-block;
  padding: 2px;
}
.paixu-item .text-active{
  color: #c00;
}
.hot-search{
  width: 700rpx;
  margin: 20rpx auto 40rpx;
  overflow: hidden;
}
.hot-title{
  font-size: 28rpx;
  color: #333333;
}
.hot-box{
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
}
.hot-item{
  font-size: 24rpx;
  color: #333333;
  border: 1px #969696 solid;
  padding: 10rpx 28rpx;
  margin-top: 20rpx;
  margin-right: 15rpx;
  margin-left: 15rpx;
  border-radius: 4px;
}
.goods-list{
  width: 700rpx;
  height: auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 20rpx auto;
}
.goods-item{
  width: 340rpx;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.goods-pic{
  width: 100%;
  height: 340rpx;
}
.goods-title{
  width: 100%;
  height: 40rpx;
  color: #333333;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.item-bottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
}
.price{
  color: #c00;
  font-size: 24rpx;
}
.price text:nth-child(1){
  font-size: 28rpx;
}
.shopping-car{
  width: 30rpx;
  height: 30rpx;
}
