/* pages/myOrder/myOrder.wxss */
.tishi{
  font-size: 28rpx;
  color: #999999;
  width: 700rpx;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
}
.order-item{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #f3f3f3;
  padding: 20rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.order-text{
  margin-right: 20rpx;
}
.order-text text:nth-child(1){
  font-size: 24rpx;
  color: #000000;
}
.order-text text:nth-child(2){
  font-size: 22rpx;
  color: #666666;
}
.xq-btn{
  color: #d35353;
  font-size: 24rpx;
  margin-left: 280rpx;
  line-height: 40rpx;
}