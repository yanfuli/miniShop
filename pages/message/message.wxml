<!--pages/message/message.wxml-->
<view class="container">
  <form class="form" bindsubmit="formSubmit">
    <view class="inp-box">
      <text>姓名：</text>
      <input placeholder="请输入姓名" value="{{username}}" disabled="true"></input>
    </view>
    <view class="inp-box">
      <text>联系方式：</text>
      <input maxlength="11" type="number" name="contact" placeholder="请输入联系方式"></input>
    </view>
    <view class="inp-box">
      <text>内容</text>
      <textarea name="content"></textarea>
    </view>
    <button form-type="submit" class="sub-btn">提交</button>
  </form>
</view>
