/* pages/classList/classList.wxss */
.scroll-view-x{
  width: 100%;
  height: 76rpx;
  overflow: hidden;
  display: flex;
  white-space: nowrap;
  border-bottom: 1px #eeeeee solid;
  padding-bottom: 12rpx;
}
.scroll-item{
  display: inline-block;
  width: 140rpx;
  height: 100%;
  white-space: normal;
  overflow: hidden;
  color: #333333;
  font-size: 28rpx;
  border-right: 1px #eeeeee solid;
  text-align: center;
}
.active{
  color: #e41616
}
.select-box{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: rgba(255, 255, 255, .9);
  box-sizing: border-box;
  padding: 10rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  position: absolute;
  top: 100rpx;
  left: 0;
  z-index: 11;
  box-shadow: 0 4rpx 4rpx rgba(153, 153, 153, .5);
}
.select-option{
  font-size: 24rpx;
  color: #333333;
  padding: 10rpx;
}
.paixu{
  width: 700rpx;
  height: auto;
  overflow: hidden;
  display: flex;
  align-items: flex-start;
  margin: 6rpx auto;
}
.paixu-title{
  color: #de6d6d;
  font-size: 28rpx;
}
.paixu-box{
  display: flex;
  width: 620rpx;
  margin-left: 14rpx;
  flex-wrap: wrap;
}
.paixu-item{
  font-size: 28rpx;
  color: #333333;
  margin-right: 20rpx;
}
.up {
    transform: rotate(-135deg);
    -webkit-transform: rotate(-135deg);
    margin-left: 5px;
    margin-bottom: 3px;
}
.down{
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    margin-left: -5px;
    margin-bottom: -1px;
}
.icon{
    border: solid #999;
    border-width: 0 1px 1px 0;
    display: inline-block;
    padding: 2px;
}
.paixu-item .icon-active{
  border: solid #c00;
  border-width: 0 1px 1px 0;
  display: inline-block;
  padding: 2px;
}
.text-active{
  color: #c00;
}
.goods-list{
  width: 700rpx;
  height: auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 20rpx auto;
}
.goods-item{
  width: 340rpx;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.goods-pic{
  width: 100%;
  height: 340rpx;
}
.goods-title{
  width: 100%;
  height: 40rpx;
  color: #333333;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.item-bottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
}
.price{
  color: #c00;
  font-size: 24rpx;
}
.price text:nth-child(1){
  font-size: 28rpx;
}
.shopping-car{
  width: 30rpx;
}
.fenye{
  width: 100%;
  display: flex;
  justify-content: center;
}
.fenye text{
  color: #333333;
  font-size: 24rpx;
  padding: 10rpx 10rpx;
}
.fenye .active{
  color: #c00;
}